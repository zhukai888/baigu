.container {
  min-height: 100%;
  background-color: #f7f7f7;
  padding: 0 24rpx;
  box-sizing: border-box
}

.header {
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.header>image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.content {
  background-color: #fff;
  padding: 80rpx 40rpx 70rpx;
}

.content input {
  border: 1px solid rgba(154, 154, 154, 0.89);
  border-radius: 6rpx;
  height: 100%;
  flex: 1;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 1);
  padding: 0 30rpx;
}

.content>view {
  height: 88rpx;
  margin-bottom: 20rpx;
}

.content>view:nth-child(2) {
  display: flex;
}

.content>view:nth-child(2)>view {
  width: 210rpx;
  height: 92rpx;
  line-height: 92rpx;
  background: rgba(255, 214, 24, 1);
  border-radius: 0px 6rpx 6rpx 0px;
  text-align: center;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 1);
}

.content>view:nth-child(2)>input {
  border-right: none;
  border-radius: 6rpx 0 0 6rpx;
}

.btn {
  margin-top: 80rpx;
  background: rgba(255, 214, 24, 1);
  border-radius: 8rpx;
  height: 88px;
  line-height: 88rpx;
  font-size: 32rpx;
  color: rgba(27, 27, 27, 1);
  text-align: center;
}

.tips {
  padding-top: 40rpx;
}

.tips>view {
  text-align: center;
  font-size: 28rpx;
  color: #1b1b1b;
  line-height: 36rpx;
}
