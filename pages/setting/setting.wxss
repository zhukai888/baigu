.navTab {
  height: 90rpx;
  width: 100%;
  white-space: nowrap;
  z-index: 2;
  background-color: #2981f8;
}

.navTab .top {
  padding: 15rpx 0;
  display: flex;
  flex-wrap: nowrap;
  height: 100%;
  justify-content: space-around;
  box-sizing: border-box;
}

.navTab .top .nav {
  padding: 7rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  height: 100%;
  text-align: center;
  box-sizing: border-box;
}

.navTab .top .nav>view {
  height: 100%;
  line-height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.container {
  min-height: 100%;
  box-sizing: border-box;
  background-color: #f7f7f7;
}

.content {
  color: #343434;
  font-size: 32rpx;
}

.content>view {
  display: flex;
  align-items: center;
  height: 120rpx;
  width: 100%;
  justify-content: space-between;
  padding: 0 24rpx;
  border-bottom: 2rpx solid #f7f7f7;
  background-color: #fff;
  box-sizing: border-box;
}

.content>view image {
  width: 18rpx;
  height: 18rpx;
}

.content>view text {
  /* height: 100%;
  line-height: 100%; */
}

.content>view input {
  flex: 1;
  height: 100%;
}

.btn {
  margin: 80rpx 24rpx 0 24rpx;
  height: 110rpx;
  background: rgba(40, 112, 245, 1);
  border-radius: 8px;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
}


.z-tarbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  z-index: 99
}

.z-tarbar image{
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 10rpx;
}

.z-tarbar>view{
  text-align: center;
  font-size: 22rpx;
  color: #676767;
  width:30%;
}
