.navTab {
  position: fixed;
  top: 0;
  left: 0;
  height: 75rpx;
  width: 100%;
  white-space: nowrap;
  z-index: 2;
  background-color: #2981f8;
}

.navTab .top {
  padding: 15rpx 0;
  display: flex;
  flex-wrap: nowrap;
  height: 100%;
  justify-content: space-around;
  box-sizing: border-box;
}

.navTab .top .nav {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  height: 100%;
  text-align: center;
}

.navTab .top .nav>view {
  height: 100%;
  line-height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.container {
  padding: 95rpx 24rpx 0;
  min-height: 100%;
  box-sizing: border-box;
  background-color: #f7f7f7;
}

.goods {
  background-color: #fff;
  padding: 20rpx 0 30rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.goods .time {
  color: #666;
  font-size: 24rpx;
  padding:  0 20rpx 34rpx;
  box-sizing: border-box;
}

.goods .product {
  border-bottom: 1rpx solid #F0F5F7;
  padding:  0 20rpx 34rpx;
  box-sizing: border-box;
}

.good {
  display: flex;
  margin-bottom: 10rpx;
}

.good image {
  min-width: 130rpx;
  max-width: 130rpx;
  height: 130rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
}

.good .content {
  padding: 10rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.good .content>view:nth-child(1) {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 32rpx;
  color: #1b1b1b;
}

.good .content>view:nth-child(2) {
  display: flex;
  justify-content: space-between;
}

.good .content>view:nth-child(2)>text:nth-child(1) {
  color: #1a1919;
  font-size: 32rpx;
}

.good .content>view:nth-child(2)>text:nth-child(2) {
  color: #999;
  font-size: 24rpx;
}

.total {
  padding: 30rpx 20rpx  10rpx;
  display: flex;
  justify-content: space-between;
  color: #1b1b1b;
  font-size: 24rpx;
  box-sizing: border-box;
}

.total image {
  width: 46rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.total>view:nth-child(1) {
  display: flex;
  align-items: center;
}

.address {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  padding: 30rpx 30rpx 30rpx 20rpx;
  background-color: #f0f5f7;
  border-radius: 8rpx;
}

.address image {
  min-width: 28rpx;
  max-width: 28rpx;
  height: 32rpx;
  padding: 20rpx;
}

.remarks {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  padding: 30rpx 10rpx 30rpx 30rpx;
  background-color: #f0f5f7;
  border-radius: 8rpx;
}

.btn {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
}

.btn button {
  font-weight: 400;
  font-size: 32rpx;
  background-color: #fff;
  padding: 0;
  height: 110rpx;
  line-height: 110rpx;
}

.btn>button:nth-child(1) {
  width: 220rpx;
  border: 1rpx solid rgba(56, 56, 56, 1);
  border-radius: 8rpx;
  box-sizing: border-box;
}

.btn>button:nth-child(2) {
  width: 420rpx;
  border-radius: 8rpx;
  background-color: #2870f5;
  color: #fff;
}

.sure {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color:rgba(0, 0, 0, 0.5) 
}

.sure .dialog {
  background-color: #fff;
  width: 620rpx;
  height: 380rpx;
  border-radius: 12rpx;
  padding-top: 80rpx;
  text-align: center;
  box-sizing: border-box;
  position: relative;
}

.sure .dialog .close {
  position: absolute;
  right:10rpx;
  top: 0rpx;
  font-size: 46rpx;
  color: #ccc;
  padding: 0 20rpx;
}

.sure .dialog .title {
  color: #000;
  font-size: 42rpx;
}

.sure .dialog .tip {
  color: #666;
  font-size: 28rpx;
  padding: 24rpx 0 50rpx;
}

.sure .dialog .sureBtn {
  width: 380rpx;
  height: 80rpx;
  background: rgba(40, 112, 245, 1);
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
}
