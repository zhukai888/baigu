.container {
  /* padding-top: 70rpx; */
  min-height: 100%;
  /* box-sizing: border-box; */
  padding: 0 24rpx;
}

.coupon {
  margin-top: 25rpx;
  height: 200rpx;
  position: relative;
  text-overflow: ellipsis
}

.coupon>image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: -999;
}

.coupon .content {
  padding-left: 30rpx;
  color: #fff;
  box-sizing: border-box;
}

.coupon .content .condition {
  display: flex;
  align-items: flex-end;
  height: 144rpx;
}

.coupon .content .condition>view {
  font-size: 36rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.coupon .content .condition>view:nth-child(1)>text:nth-child(2) {
  padding-bottom: 24rpx;
}

.coupon .content .condition>view:nth-child(2) {
  margin-left: 10rpx;
  padding: 10rpx 0;
  font-size: 29rpx;
  color: rgba(255, 42, 73, 1);
  background-color: #fff;
  border-radius: 30rpx;
  position: relative;
  top: -24rpx;
  /* text-align: center; */
  width: 180rpx;
}

.coupon .content .time {
  /* padding-top: 20rpx; */
  font-size: 25rpx;
  color: rgba(255, 255, 255, 1);
}

.couponShadow {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.couponShadow>image {
  margin-top: 60rpx;
  width: 64rpx;
  height: 64rpx;
}

.receive {
  padding: 75rpx 72rpx 60rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

.receive>view:nth-child(1) {
  font-size: 75rpx;
  color: #191919;
  text-align: center;
}

.receive>view:nth-child(2) {
  padding: 30rpx 0 75rpx;
  font-size: 38rpx;
  color: rgba(24, 24, 24, 1);
  text-align: center;
}

.receive>view:nth-child(3) {
  font-size: 32rpx;
  color: rgba(27, 27, 27, 1);
  text-align: center;
  background: rgba(255, 214, 24, 1);
  border-radius: 8rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.nodata{
  min-height: 100%;
  display: flex;
  font-size: 32rpx;
  justify-content: center;
  padding-top: 200rpx;
  letter-spacing: 8rpx;
}