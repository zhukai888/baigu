.container {
  min-height: 100%;
  background-color: #f7f7f7;
  padding: 20rpx 24rpx 0;
  box-sizing: border-box;
}

.top {
  background-color: #fff;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-radius: 6rpx;
  height: 250rpx;
}

.top>image:nth-child(1) {
  min-width: 38rpx;
  max-width: 38rpx;
  height: 46rpx;
  margin-right: 38rpx;
}

.top>image:nth-child(3) {
  width: 26rpx;
  height: 18rpx;
  padding: 10rpx;
}

.top .content {
  font-size: 28rpx;
  color: rgba(26, 26, 26, 1);
  line-height: 42rpx;
  width: 520rpx;
}

.top .content>view:nth-child(1)>view:nth-child(1) {
  font-size: 28rpx;
  color: rgba(26, 26, 26, 1);
  vertical-align: baseline;
}

.top .content>view:nth-child(1)>view:nth-child(1)>text:nth-child(1) {
  font-size: 32rpx;
  font-weight: bold;
  padding-right: 30rpx;
}

.top .content>view:nth-child(1)>view:nth-child(2) {
  padding: 24rpx 20rpx 20rpx 0;
  box-sizing: border-box;
  width: 400rpx;
}

.top .content>view:nth-child(1)>view:nth-child(3) {
  color: #f00;
}

.good {
  padding: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
}

.good .header {
  display: flex;
}

.good .header>image {
  min-width: 130rpx;
  max-width: 130rpx;
  height: 130rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.good .header .detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.good .header .detail>.omit {
  font-size: 32rpx;
  color: rgba(27, 27, 27, 1);
  width: 510rpx;
}

.good .header .detail>.price {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.good .middle {
  padding-top: 30rpx;
}

.good .middle>view {
  padding-bottom: 20rpx;
}

.middle .coupon, .middle .info {
  height: 65rpx;
  line-height: 65rpx;
  display: flex;
  justify-content: space-between;
}

.middle .info>text:nth-child(1)>text:nth-child(2) {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
}

.middle .info .m-content, .middle .coupon>text:nth-child(1),
.middle .remarks>text:nth-child(1) {
  font-size: 32rpx;
  color: rgba(27, 27, 27, 1);
  width: 160rpx;
}

.middle .info .m-content {
  margin-right: 30rpx;
}

.middle .coupon>text:last-child, .middle .info>text:last-child {
  font-size: 28rpx;
  color: #1b1b1b;
}

.middle .remarks>textarea {
  margin-top: 10rpx;
  height: 140rpx;
  background-color: #f7f7f7;
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
}

