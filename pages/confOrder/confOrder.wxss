.mCostDetail {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.5);
}

.mCostDetail__box {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 600rpx;
  background: #fff;
  z-index: 100;
}

.chooseCoupon {
  margin-top: 30rpx;
  height: 200rpx;
  position: relative;
}

.chooseCoupon>image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: -999;
}

.chooseCoupon .content {
  padding-left: 30rpx;
  color: #fff;
  box-sizing: border-box;
}

.chooseCoupon .content .condition {
  display: flex;
  align-items: flex-end;
}

.chooseCoupon .content .condition>view {
  font-size: 36rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.chooseCoupon .content .condition>view:nth-child(1)>text:nth-child(2) {
  padding-bottom: 24rpx;
}

.chooseCoupon .content .condition>view:nth-child(2) {
  margin-left: 10rpx;
  padding: 10rpx 0;
  font-size: 29rpx;
  color: rgba(255, 42, 73, 1);
  background-color: #fff;
  border-radius: 30rpx;
  position: relative;
  top: -24rpx;
  width: 180rpx;
}

.chooseCoupon .content .time {
  font-size: 25rpx;
  color: rgba(255, 255, 255, 1);
}

.chooseCoupon:nth-child(1) {
  margin-top: 60rpx;
}

.chooseCoupon:last-child {
  margin-bottom: 60rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.submit {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 110rpx;
  padding-right: 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background-color: #fff;
  width: 100%;
}

.submit>view {
  width: 240rpx;
  height: 90rpx;
  background: rgba(255, 214, 24, 1);
  border-radius: 8rpx;
  font-size: 32rpx;
  color: rgba(27, 27, 27, 1);
  line-height: 90rpx;
  text-align: center;
}

.submit>text:nth-child(1) {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
}

.submit>text:nth-child(2) {
  font-size: 32rpx;
  color: rgba(27, 27, 27, 1);
  margin: 0 20rpx;
}
