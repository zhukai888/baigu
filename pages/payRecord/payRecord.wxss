.order .top .t-title>view:nth-child(2) {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order .top .t-title>view:nth-child(2)>text:nth-child(1) {
  font-size: 32rpx;
  color: #1a1919;
}

.order .price {
  font-size: 24rpx;
  color: rgba(27, 27, 27, 1);
  padding: 20rpx 0 40rpx;
  display: flex;
  justify-content: space-between;
}

.order .btn {
  display: flex;
  justify-content: flex-end;
}

.order .btn>view {
  width: 210rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: rgba(0, 0, 0, 0);
  border: 1rpx solid rgba(154, 154, 154, 0.89);
  border-radius: 35rpx;
  font-size: 32rpx;
  color: rgba(153, 153, 153, 1);
  text-align: center;
}

.noOrder {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 90rpx;
}

.noOrder>image {
  width: 455rpx;
  height: 510rpx;
  padding-left: 120rpx;
}

.noOrder>text:nth-child(2) {
  padding: 40rpx 0 20rpx;
  font-size: 38rpx;
  font-weight: bold;
  color: rgba(27, 27, 27, 1);
}

.noOrder>text:nth-child(3) {
  font-size: 28rpx;
  color: rgba(27, 27, 27, 1);
}
