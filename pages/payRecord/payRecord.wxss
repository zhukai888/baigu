.navTab {
  position: fixed;
  top: 0;
  left: 0;
  height: 70rpx;
  width: 100%;
  white-space: nowrap;
  z-index: 2;
  background-color: #fff;
}

.navTab .scroll {
  display: flex;
}

.navTab .nav {
  padding: 0 30rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  color: #666;
  font-size: 30rpx;
}

.navTab .active>text {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(26, 26, 26, 1);
}

.navTab image {
  width: 36rpx;
  height: 13rpx;
  margin: 0 auto;
  margin-top: 10rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.active {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(26, 26, 26, 1);
}

.nav>view>image {
  width: 36rpx;
  height: 13rpx;
  margin-top: 10rpx;
}

.container {
  padding-top: 90rpx;
  min-height: 100%;
  height: 100%;
  box-sizing: border-box;
}

.orderList {
  border-radius: 26rpx;
  background-color: #f7f7f7;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  min-height: 100%;
}

.order {
  margin-bottom: 10rpx;
  padding: 20rpx;
  background-color: #fff;
}

.order .top {
  display: flex;
}

.order .top>image {
  min-width: 130rpx;
  max-width: 130rpx;
  height: 130rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.order .top .t-title {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
  box-sizing: border-box;
}

